<form action='/post/new' method='get'><input class='btn new' type='submit' value='New Post'></form>
<h3>All Posts</h3>
<ul>
<% @posts.each do |post| %>
  <div class='hover'>
  <li><a href='/post/<%=post.id%>'><%= post.title %></a><br>
    <p><%=post.snippet%>...</p>
  </li>
  </div>
<% end %>
</ul>
<div class='pages'>
  <% if previous? %><a class='previous' href="/page/<%=@page - 1%>"><</a><% end %>
  <% 1.upto(pages) do |page| %>
    <a <%="class='current'" if page == @page = 1%>href="/page/<%=page-1%>"><%=page%></a>
  <% end %>
  <% if next? %><a class='next' href="/page/<%=@page + 1%>">></a><% end %>
</div>


