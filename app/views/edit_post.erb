<h3>Edit Your Post</h3>
<% if @post && @post.errors %>
  <% @post.errors.each do |attr, error| %>
    <p><%= attr.capitalize %> <%= error %>.</p>
  <% end %>
<% end %>
<form action='/post/edit/<%=@post.id%>' method='post'>
  <input class='text' type='text' name='post[title]' value='<%=@post.title%>'><br>
  <input class='text' type='text' name='post[tags]' value='<%=@post.tags.map(&:title).join(', ')%>'><br>
  <textarea class='text' name='post[body]' rows='20' cols='50'><%=@post.body%></textarea><br>
  <input class='btn new' type='submit' text='Edit'>
</form>
